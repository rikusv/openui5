<mvc:View
	controllerName="sap.m.sample.ListFilterBinding.List"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
		headerText="Products"
		showUnread="true"
		items="{
			path: '/ProductCollection',
			filters: [
				{path: 'Category', operator: 'EQ', value1: '{ViewControl>/Category}'}
			]
		}">
		<headerToolbar>
			<Toolbar>
				<content>
					<Title text="Products" level="H2"/>
					<ToolbarSpacer/>
					<Label text="List Item type:" labelFor="state"/>
					<Select
						forceSelection="false"
						selectedKey="{ViewControl>/Category}"
						items="{/ProductCollectionStats/Filters/0/values}">
						<core:Item key="{text}" text="{text}"/>
					</Select>
				</content>
			</Toolbar>
		</headerToolbar>
		<StandardListItem
			title="{Name}"
			description="{ProductId}"
			icon="{ProductPicUrl}"
			iconDensityAware="false"
			iconInset="false"/>
	</List>
</mvc:View>
